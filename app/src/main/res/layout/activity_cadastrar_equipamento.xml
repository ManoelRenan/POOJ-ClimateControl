<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CadastrarEquipamento">

    <TextView
        android:id="@+id/CadastrarEquipamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_cadastrarEquipamento"
        android:textAllCaps="false"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/edit_marca"
        style="@style/Edit_Text"
        android:hint="Marca"
        android:drawableRight="@drawable/ic_arrow"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/CadastrarEquipamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/edit_tipo"
        style="@style/Edit_Text"
        android:hint="Tipo"
        android:drawableRight="@drawable/ic_arrow"
        app:layout_constraintTop_toBottomOf="@id/edit_marca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/edit_local"
        style="@style/Edit_Text"
        android:hint="Local"
        app:layout_constraintTop_toBottomOf="@id/edit_tipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        style="@style/Button"
        android:layout_marginTop="30dp"
        android:text="Cadastrar"
        app:layout_constraintTop_toBottomOf="@id/edit_local"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>